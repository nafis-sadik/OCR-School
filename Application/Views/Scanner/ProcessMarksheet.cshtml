@model Entities.Application.Marksheet
@{ 
    Layout = null;
}

@*<form method="post" action="/Scanner/UserSubmit">*@
<form id="FinalizedMarkSheet">
    <div class="form-group">
        @for (int i = 0; i < Model.Question.Count; i++)
        {
            <label for="exampleFormControlInput1">Question</label>
            <input class="form-control" name="Question" type="text" placeholder="@Model.Question[i]" value="@Model.Question[i]">
            <label for="exampleFormControlInput1">Score</label>
            @if (Model.Marks.Count > i)
            {
                <input class="form-control" name="Marks" type="text" placeholder="@Model.Marks[i]" value="@Model.Marks[i]">
            }
            else
            {
                <input class="form-control" name="Marks" type="text" placeholder="0" value="0">
            }
        }
    </div>
    @Html.HiddenFor(x => x.MarkSheetId)
    <button id="SubmitMarksheet" type="button" class="btn btn-primary mb-2">Submit Score</button>
</form>